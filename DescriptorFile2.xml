<?xml version="1.0" encoding="utf-8" ?>

<synapse-unit-test>
    <artifact>
        <api xmlns="http://ws.apache.org/ns/synapse" name="apiTest2" context="/order2">
            <resource methods="GET" url-mapping="/">
                <inSequence>
                    <log level="full" />
                    <send>
                        <endpoint name="Hospital">
                            <address uri="http://localhost:9091/hello/sayHello" />
                        </endpoint>
                    </send>
                </inSequence>
                <outSequence>
                    <log level="full" />
                    <respond/>
                </outSequence>
            </resource>
        </api>
    </artifact>

    <artifact-type>api</artifact-type>

    <test-cases-count>1</test-cases-count>
    <test-cases>
        <test-case-1>
            <input-xml-payload>
                <![CDATA[<?xml version='1.0' encoding='UTF-8' ?>]]>
            </input-xml-payload>

            <expected-property-values>
                <![CDATA[<?xml version='1.0' encoding='UTF-8' ?>]]>
            </expected-property-values>

            <expected-payload>
                {"fname":"Peter","lname":"Stallone", "age":22,"address":{"line":"20 Palm Grove","city":"Colombo 03","country":"Sri Lanka"}}
            </expected-payload>

        </test-case-1>
    </test-cases>

    <mock-services-count>1</mock-services-count>
    <mock-services>
        <mock-service-1>
            <service-name>Hospital</service-name>
            <mock-service-host>localhost</mock-service-host>
            <mock-service-port>9099</mock-service-port>
            <mock-service-path>/users</mock-service-path>
            <mock-service-type>GET</mock-service-type>
            <mock-service-payload>
                {
                    "name":"John Smith",
                    "age":23,
                    "hospital":"Central Hospital"
                }
            </mock-service-payload>
            <mock-service-expected-response>
                {"fname":"Peter", "lname":"Stallone", "age":22, "address":{"line":"20 Palm Grove", "city":"Colombo 03", "country":"Sri Lanka"}}
            </mock-service-expected-response>
        </mock-service-1>
        <mock-service-2>
            <service-name>Hospital3</service-name>
            <mock-service-host>127.0.0.1</mock-service-host>
            <mock-service-port>9093</mock-service-port>
            <mock-service-path>/users/user/info</mock-service-path>
            <mock-service-type>GET</mock-service-type>
            <mock-service-payload>
                {
                "name":"John Smith",
                "age":23,
                "hospital":"Central Hospital"
                }
            </mock-service-payload>
            <mock-service-expected-response>
                {
                "hospital":"Central Hos Hospital"
                }
            </mock-service-expected-response>
        </mock-service-2>
    </mock-services>
</synapse-unit-test>
